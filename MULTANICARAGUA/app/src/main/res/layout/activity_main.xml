<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Tipo de infraccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="336dp" app:layout_constraintHorizontal_bias="0.0"/>
    <RadioButton
            android:text="MP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbmp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/rbp"
            android:layout_marginEnd="13dp"/>
    <RadioButton
            android:text="P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbp" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/rbmp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/rbvn"
            android:layout_marginEnd="15dp"/>
    <RadioButton
            android:text="VN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbvn"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="45dp" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/rbp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"/>
    <TextView
            android:text="Numeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rbmp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="341dp" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/etnumeral"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etnumeral" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="182dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etmonto" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="182dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <TextView
            android:text="Monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etnumeral" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etmonto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etfecha" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Conductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/etfecha" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etconductor" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <TextView
            android:text="Placa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/etconductor" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etplaca" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <Button
            android:text="Crear Multa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncrear" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etplaca" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="299dp"/>
    <Button
            android:text="consultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnconsultar" android:layout_marginStart="74dp"
            app:layout_constraintStart_toEndOf="@+id/btncrear" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/etplaca" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="104dp" android:layout_marginBottom="86dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>